*
  margin 0
  padding 0
  outline 0
  box-sizing border-box

  overflow-x hidden

  -webkit-overflow-scrolling touch
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

.flex
  display flex

.flex-height
  height 100vh

.flex-column
  flex-direction column

.flex-center
  justify-content center
  align-items center

.flex-center-y
  align-items center

.flex-1
  flex 1

.flex-scroll
  overflow-y auto

.pdlr
  padding-left 16px
  padding-right @padding-left
